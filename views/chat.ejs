<%- include ('layout/head.ejs') %>
<body>
  <div class="chat-container">
    <header class="chat-header">
      <h1><i class="fas fa-smile"></i> ChatCord</h1>
      <a href="/" class="btn">Leave room</a>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">
        <h3><i class="fas fa-smile"></i> Room name:</h3>
        <h2 id="room-name"></h2>
        <h3><i class="fas fa-user"></i> Users</h3>
        <ul id="users"></ul>
      </div>
      <div class="chat-messages">
        <div class="chat-messages">
        </div>
      </div>
    </main>
    <div class="chat-form-container">
      <form action="" id="chat-form">
        <input type="text" id="msg" placeholder="Enter your message" required autocomplete="off">
        <button type="submit" class="btn btn-success">Send</button>
      </form>
    </div>
  </div>

<!-- frontend library -->
<!-- Для разбора параметров query строки -->
